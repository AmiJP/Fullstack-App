pipeline {
    agent any
    
    tools {
        nodejs 'NodeJS'
    }
    
    environment {
        NODEJS_HOME = tool 'NodeJS'
        PATH = "${NODEJS_HOME};${env.PATH}"
    }
    
    stages {
        stage('Clone Repo') {
            steps {
                bat 'git clone https://github.com/AmiJP/Fullstack-App.git .'
            }
        }
        stage('Install Dependencies') {
            steps {
                powershell '''
                    npm config set registry https://registry.npmjs.org/
                    npm install
                '''
            }
        }
        stage('Run Tests') {
            steps {
                powershell 'npm test'
            }
        }
        stage('Build (if needed)') {
            steps {
                powershell 'npm run build'
            }
        }
        stage('Deploy') {
            steps {
                powershell 'Write-Host "Deploy steps go here"'
            }
        }
    }
    
    post {
        failure {
            powershell 'Write-Host "Build failed"'
        }
        success {
            powershell 'Write-Host "Build succeeded"'
        }
    }
}
