pipeline {
    agent any
    
    tools {
        nodejs 'NodeJS' // Make sure you have NodeJS configured in Jenkins
    }
    
    stages {
        stage('Clone Repo') {
            steps {
                git 'https://github.com/AmiJP/Fullstack-App.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                bat 'npm config set registry https://registry.npmjs.org/'
                bat 'npm install'
            }
        }
        stage('Run Tests') {
            steps {
                bat 'npm test'
            }
        }
        stage('Build (if needed)') {
            steps {
                bat 'npm run build'
            }
        }
        stage('Deploy') {
            steps {
                bat 'echo "Deploy steps go here"'
            }
        }
    }
    
    post {
        failure {
            bat 'echo "Build failed"'
        }
        success {
            bat 'echo "Build succeeded"'
        }
    }
}
