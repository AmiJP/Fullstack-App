pipeline {
    agent any
    
    tools {
        nodejs 'NodeJS'
    }
    
    environment {
        NODEJS_HOME = tool 'NodeJS'
        PATH = "${env.NODEJS_HOME}\\npm;${env.NODEJS_HOME};${env.PATH}"
    }
    
    stages {
        stage('Clone Repo') {
            steps {
                script {
                    bat 'if exist * del /q *'
                    bat 'if exist .* del /q .*'
                    bat 'git clone https://github.com/AmiJP/Fullstack-App.git .'
                }
            }
        }
        stage('Install Dependencies') {
            steps {
                bat 'npm config set registry https://registry.npmjs.org/'
                bat 'npm install'
            }
        }
        stage('Run Tests') {
            steps {
                bat 'npm test'
            }
        }
        stage('Build') {
            steps {
                bat 'npm run build'
            }
        }
        stage('Deploy') {
            steps {
                bat 'echo "Deploy steps go here"'
            }
        }
    }
    
    post {
        failure {
            bat 'echo "Build failed"'
        }
        success {
            bat 'echo "Build succeeded"'
        }
    }
}
