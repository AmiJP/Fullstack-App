pipeline {
    agent any
    stages {
        stage('Clone Repo') {
            steps {
                git 'https://github.com/yourusername/your-repo.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Run Tests') {
            steps {
                sh 'npm test'
            }
        }
        stage('Build (if needed)') {
            steps {
                sh 'npm run build' // for React or custom build script for Node
            }
        }
        stage('Deploy') {
            steps {
                // For education, use a simple deploy: copy files to a test VM, run Docker, or use Heroku CLI
                sh '''
                    echo "Deploy steps go here: e.g., scp files to server, ssh and restart service, etc."
                '''
            }
        }
    }
}
