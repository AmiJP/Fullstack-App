pipeline {
    agent any
    stages {
        stage('Clone Repo') {
            steps {
                git 'https://github.com/AmiJP/Fullstack-App.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }
        stage('Run Tests') {
            steps {
                bat 'npm test'
            }
        }
        stage('Build (if needed)') {
            steps {
                bat 'npm run build' 
            }
        }
        stage('Deploy') {
            steps {
                bat '''
                    echo "Deploy steps go here: e.g., scp files to server, ssh and restart service, etc."
                '''
            }
        }
    }
}
